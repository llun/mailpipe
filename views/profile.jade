extends loggedin-layout

block inner-content
  .row-fluid
    .offset3.span6.profile
      h2 Profile
      form.form-horizontal
        .control-group
          label.control-label(for='email') Email
          .controls
            input.span9(type='text',id='email',name='email')
            span.fui-mail-16.form-field-icon
        hr
        .control-group
          label.control-label(for='password') Password
          .controls
            input.span9(type='text',id='password',name='password')
            span.fui-lock-16.form-field-icon
        .control-group
          label.control-label(for='confirm') Confirm Password
          .controls
            input.span9(type='text',id='confirm',name='confirm')
            span.fui-lock-16.form-field-icon
        hr
        .control-group
          .controls
            button.btn Save
