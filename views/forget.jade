extends layout

block stylesheet
  link(rel='stylesheet',type='text/css',href='/css/mailpipe-gate.css')

block content
  .container
    .row
      .span2.offset3.login-box
        .icon
          img(src='/images/icons/Mail.png',alt='Welcome to MailPipe')
          h4
            | Welcome to 
            small MailPipe
      .span5
        form.login-form(action='/users/forget',method='post')
          if flash.error && flash.error.length > 0
            .alert.alert-error
              = flash.error
          .control-group
            input.login-field#email(type='text',placeholder='Email',name='email')
            i.input-icon.fui-mail
          input(type='hidden',name='_csrf',value='#{token}')
          button.btn.btn-large.btn-block(type='submit') Forget password
