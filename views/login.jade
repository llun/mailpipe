extends layout

block stylesheet
  link(rel='stylesheet',type='text/css',href='/css/mailpipe-gate.css')

block content
  .container
    .row
      .span2.offset3.login-box
        .icon
          img(src='/images/illustrations/mail.png',alt='Welcome to MailPipe')
          h4
            | Welcome to 
            small MailPipe
      .span5
        
        form.login-form(action='/users/login',method='post')
          if flash.error && flash.error.length > 0
            .alert.alert-error
              = flash.error[0]
          if flash.info
            .alert.alert-success
              = flash.info
          .control-group
            input.login-field#username(type='text',placeholder='Username',name='username')
            label.login-field-icon.fui-man-16(for='username')
          .control-group
            input.login-field#password(type='password',placeholder='Password',name='password')
            label.login-field-icon.fui-lock-16(for='password')
          input(type='hidden',name='_csrf',value='#{token}')
          button.btn.btn-large.btn-block(type='submit') Login
          a.login-link(href='/forget.html') Lost your password?