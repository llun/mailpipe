extends loggedin-layout

block inner-content
  .row-fluid
    .span3
      a.btn.btn-block.btn-large.service-add(href='/services/add.html') Add new service
      ul.service-list
        li
          .toggle(style='float: right')
            label.toggle-radio(for='service1-on') ON
              span.knob-on
            input#service1-on(type='radio',name='service1',value='on',checked='checked')
            label.toggle-radio(for='service1-off') OFF
              span.knob-off
            input#service1-off(type='radio',name='service1',value='off')
          label.service-label Service1
          .service-info
            span.service-received 13 received
            span.service-sent 3 sent
            span.service-error 10 error
        li.selected
          .toggle(style='float: right')
            label.toggle-radio(for='service2-on') ON
              span.knob-on
            input#service2-on(type='radio',name='service2',value='on')
            label.toggle-radio(for='service2-off') OFF
              span.knob-off
            input#service2-off(type='radio',name='service2',value='off',checked='checked')
          label.service-label Service2
          .service-info
            span.service-received 0 received
            span.service-sent 0 sent
            span.service-error 0 error
        li
          .toggle(style='float: right')
            label.toggle-radio(for='service3-on') ON
              span.knob-on
            input#service3-on(type='radio',name='service3',value='on',checked='checked')
            label.toggle-radio(for='service3-off') OFF
              span.knob-off
            input#service3-off(type='radio',name='service3',value='off')
          label.service-label Service3
          .service-info
            span.service-received 0 received
            span.service-sent 0 sent
            span.service-error 0 error
    .span9.service-new
      .row-fluid        
        .span6.offset3
          form.form-horizontal
            .control-group
              label.control-label(for='service-name') Service Name
              .controls
                input(type='text',id='service-name',name='service-name')
            .control-group
              label.control-label(for='service-authentication-type') Authentication Type
              .controls
                select(id='service-authentication-type',name='service-authentication-type',value='no',tabindex=1)
                  option(value='oauth') OAuth
                  option(value='no',selected='selected') No Authentication
            .control-group
              label.control-label(for='service-oauth-key') OAuth Key
              .controls
                input(type='text',id='service-oauth-key',name='service-oauth-key')
            .control-group
              label.control-label(for='service-oauth-secret') OAuth Secret
              .controls
                input(type='text',id='service-oauth-secret',name='service-oauth-secret')
            .control-group
              label.control-label(for='service-url') URL
              .controls
                input(type='text',id='service-url',name='service-url')
            .control-group
              .controls
                ul
                  li
                    button.btn Add
                  li
                    button.btn.btn-danger Cancel

block script
  script(type='text/javascript')
    $(document).ready(function () {
      $('#service-authentication-type').select2();
    });
  
